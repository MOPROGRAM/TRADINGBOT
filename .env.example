# ===============================================================
# Trading Bot Environment Variables
# ===============================================================
#
# How to use:
# 1. Rename this file from ".env.example" to ".env" for local development.
# 2. For production (Render), create an Environment Group with these variables.
#

# --- Exchange API Credentials ---
BINANCE_API_KEY="YOUR_API_KEY_HERE"
BINANCE_API_SECRET="YOUR_API_SECRET_HERE"

# --- Telegram Notifications ---
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN_HERE"
TELEGRAM_CHAT_ID="YOUR_TELEGRAM_CHAT_ID_HERE"

# --- Core Bot Settings ---
SYMBOL=XLM/USDT
TIMEFRAME=5m
POLL_SECONDS=10
DRY_RUN=True
LOG_LEVEL=INFO

# --- Strategy Parameters ---
# The period for the volume Simple Moving Average (SMA) to confirm a buy signal.
VOLUME_SMA_PERIOD=20
# The period for the Exponential Moving Average (EMA) used as a sell signal if price crosses below it.
EXIT_EMA_PERIOD=9

# --- NEW: Advanced Strategy Parameters ---
# The period for the long-term EMA used as a trend filter. Buys are only considered above this EMA.
TREND_EMA_PERIOD=50
# The RSI level below which a sell signal (price < EXIT_EMA_PERIOD) is confirmed.
EXIT_RSI_LEVEL=65

# --- Risk Management Parameters (Percentage Based) ---
# These are used if ATR-based SL/TP is disabled.
STOP_LOSS_PERCENT=1.5
TAKE_PROFIT_PERCENT=3.0

# --- Trailing Take Profit Parameters ---
TRAILING_TP_ACTIVATION_PERCENT=1.0
TRAILING_SL_PERCENT=0.5
